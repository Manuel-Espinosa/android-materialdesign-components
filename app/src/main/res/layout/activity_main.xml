<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">
        
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CatÃ¡logo de Material Design"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp" />

        <Button
            android:id="@+id/btnButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttons" />

        <Button
            android:id="@+id/btnTextFields"
            android:layout_below="@id/btnButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_fields" />

        <Button
            android:id="@+id/btnDatePickers"
            android:layout_below="@id/btnTextFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_pickers" />

        <Button
            android:id="@+id/btnTimePickers"
            android:layout_below="@id/btnDatePickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_pickers" />

        <Button
            android:id="@+id/btnSliders"
            android:layout_below="@id/btnTimePickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sliders" />

        <Button
            android:id="@+id/btnCheckboxes"
            android:layout_below="@id/btnSliders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkboxes" />

    </LinearLayout>
</layout>
